<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="10dp">
        <ImageView
            android:id="@+id/lv_imgCart"
            android:layout_width="90dp"
            android:layout_height="120dp"
            android:src="@drawable/book"
            android:layout_marginRight="20dp"
            android:scaleType="centerCrop">
        </ImageView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <LinearLayout
                android:id="@+id/cart_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginRight="15dp"
                android:minWidth="210dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/lv_txt_titleCart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:minHeight="35dp"
                    android:text="Mắt biếc"
                    android:textColor="@color/black"
                    android:textSize="18sp"/>


                <TextView
                    android:id="@+id/lv_txt_priceCart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="50000"
                    android:textColor="@color/red"
                    android:textSize="16sp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btngiamsoluong"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@color/primary_color"
                        android:gravity="center"
                        android:text="-"
                        android:textColor="@color/white"
                        android:textSize="25sp"
                        tools:ignore="TouchTargetSizeCheck"/>

                    <TextView
                        android:id="@+id/txtsoluongCart"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1"
                        android:textColor="@color/text_second"
                        android:textSize="20sp"
                        android:textStyle="bold"/>

                    <Button
                        android:id="@+id/btntangsoloung"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@color/primary_color"
                        android:gravity="center"
                        android:text="+"
                        android:textColor="@color/white"
                        tools:ignore="TouchTargetSizeCheck"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true">

                <ImageButton
                    android:id="@+id/btnRemove"
                    android:layout_width="40dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="6dp"
                    android:background="@drawable/red_button"
                    android:src="@drawable/ic_outline_close_24"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck"/>
            </LinearLayout>
        </RelativeLayout>


    </LinearLayout>
</LinearLayout>