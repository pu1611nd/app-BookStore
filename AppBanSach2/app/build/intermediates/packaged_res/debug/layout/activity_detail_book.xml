<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.DetailBook">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tvTitleDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Thiên tài bên trái kẻ điên bên phải"
                android:textAlignment="center"
                android:textSize="24sp"
                android:textColor="#2196F3"
                android:textStyle="bold"
                android:layout_marginTop="30dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvGiaDetail"
                android:text="100.000 VND"
                android:textSize="24sp"
                android:textAlignment="center"/>

            <ImageView
                android:layout_marginTop="10dp"
                android:layout_marginBottom="15dp"
                android:scaleType="fitCenter"
                android:id="@+id/ivSachDetail"
                android:layout_width="180dp"
                android:layout_height="200dp"
                android:src="@drawable/thientai_kedien"
                android:layout_gravity="center_horizontal"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center">
                <Button
                    android:id="@+id/btnGiamSoLuong"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:padding="0dp"
                    android:background="@color/primary_color"
                    android:text="-"
                    android:textSize="25sp"/>
                <TextView
                    android:id="@+id/tvSoLuong"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_marginStart="8dp"
                    android:text="1"
                    android:textSize="18sp"
                    android:textStyle="bold"/>
                <Button
                    android:id="@+id/btnTangSoLuong"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:padding="0dp"
                    android:layout_marginStart="9dp"
                    android:background="@color/primary_color"
                    android:text="+"
                    android:textSize="25sp"/>
            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="NỘI DUNG"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_margin="16dp" />
            <TextView
                android:id="@+id/tvMoTa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Một tác phẩm được nhiều người bình chọn là hay nhất của nhà văn này."
                android:textSize="18sp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="THÔNG TIN CHI TIẾT"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_margin="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:gravity="center_vertical"
                android:background="#DDDDDD">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Tác giả"
                    android:textSize="19sp"/>

                <TextView
                    android:id="@+id/tvTacGia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Cao Minh"
                    android:textSize="19sp"
                    android:gravity="center" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Năm xuất bản"
                    android:textSize="19sp"/>

                <TextView
                    android:id="@+id/tvNamXB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="2015"
                    android:textSize="19sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:background="#DDDDDD">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Thể loại"
                    android:textSize="19sp"/>

                <TextView
                    android:id="@+id/tvTheLoai"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Truyện Ngắn"
                    android:gravity="center"
                    android:textSize="19sp"/>
            </LinearLayout>
            <Button
                android:id="@+id/btnThemGioHang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:backgroundTint="@color/primary_color"
                android:layout_marginTop="20dp"
                android:textSize="18sp"
                android:enabled="true"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:text="Thêm vào giỏ hàng">
            </Button>

        </LinearLayout>
    </ScrollView>

</LinearLayout>