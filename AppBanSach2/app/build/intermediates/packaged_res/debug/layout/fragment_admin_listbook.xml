<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".admin.AdminListbook">

    <LinearLayout
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/tvBookOfTitle"
            android:hint="Nhập tên sách..........."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/btnTimkiem"
            android:text="Tìm kiếm"
            android:textColor="@color/primary_color"
            android:textAllCaps="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/btnAddBook"
            android:layout_gravity="right"
            android:text="Thêm"
            android:textColor="@color/primary_color"
            android:textAllCaps="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/admin_list_book_container"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp">
        <TextView
            android:id="@+id/tv_bookZero"
            android:textColor="@color/red"
            android:visibility="invisible"
            android:layout_gravity="center"
            android:text="Không có cuốn sách nào"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ListView
            android:layout_margin="20dp"
            android:id="@+id/admin_lv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </FrameLayout>
    <LinearLayout
        android:id="@+id/linear_book"
        android:visibility="gone"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <androidx.constraintlayout.utils.widget.ImageFilterButton
            android:id="@+id/btn_back"
            android:src="@drawable/ic_baseline_arrow_back_24"
            android:background="@color/primary_color"
            android:layout_width="40dp"
            android:layout_height="40dp"/>
        <TextView
            android:id="@+id/tv_page"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            android:text="1"
            android:textStyle="bold"
            android:textColor="@color/primary_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginLeft="5dp"
            android:layout_gravity="center_vertical"
            android:text="Of"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_pages"
            android:layout_marginLeft="5dp"
            android:layout_gravity="center_vertical"
            android:text="20"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <androidx.constraintlayout.utils.widget.ImageFilterButton
            android:id="@+id/btn_forward"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ic_baseline_arrow_forward_24"
            android:background="@color/primary_color"
            android:layout_width="40dp"
            android:layout_height="40dp"/>
    </LinearLayout>

</LinearLayout>