<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="10dp"
    android:layout_marginBottom="20dp">
    <ImageView
        android:id="@+id/lv_img1"
        android:layout_width="90dp"
        android:layout_height="100dp"
        android:src="@drawable/book"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="5dp">
    </ImageView>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/lv_img1"
        android:layout_marginLeft="105dp"
        android:layout_marginRight="15dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/lv_txt_title1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:ellipsize="end"
            android:fontFamily="@font/roboto_regular"
            android:maxLines="2"
            android:minHeight="35dp"
            android:text="Mắt biếc"
            android:textColor="@color/black"
            android:textSize="18sp"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/lv_txt_price1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:text="50000"
                android:textColor="@color/green"/>

            <TextView
                android:id="@+id/lv_txt_quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="x10"
                android:textColor="@color/black"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:gravity="bottom|center_vertical"
        android:layout_alignParentRight="true"
        android:orientation="horizontal">
        <TextView
            android:text="Tổng tiền :"
            android:textColor="@color/primary_color"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_tongTien"
            android:text="2000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    </LinearLayout>
</RelativeLayout>