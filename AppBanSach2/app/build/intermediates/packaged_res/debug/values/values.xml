<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:ns1="http://schemas.android.com/tools">
    <color name="background">#f4f4f4</color>
    <color name="black">#FF000000</color>
    <color name="green">#35a813</color>
    <color name="ic_book_background">#ffffff</color>
    <color name="ic_launcher_background">#F1F6F3</color>
    <color name="primary_color">#2C55A5</color>
    <color name="purple_200">#FFBB86FC</color>
    <color name="purple_500">#FF6200EE</color>
    <color name="purple_700">#FF3700B3</color>
    <color name="red">#d71a00</color>
    <color name="second_color">#5685e3</color>
    <color name="teal_200">#FF03DAC5</color>
    <color name="teal_700">#FF018786</color>
    <color name="text_second">#828282</color>
    <color name="white">#FFFFFFFF</color>
    <dimen name="grid_spacing">16dp</dimen>
    <string name="app_name">AppBanSach</string>
    <style name="Divider">
        <item name="android:background">?android:attr/listDivider</item>
    </style>
    <style name="Divider.Horizontal" parent="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>

    </style>
    <style name="Divider.Vertical" parent="Divider">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>
    <style name="MyTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryDark">@color/background</item>
        <item name="colorAccent">@color/primary_color</item>
        <item name="android:colorAccent">@color/primary_color</item>
    </style>
    <style name="Theme.AppBanSach" parent="Theme.AppCompat.DayNight.NoActionBar">
        
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryVariant">@color/red</item>
        <item name="colorOnPrimary">@color/white</item>
        
        <item name="colorSecondary">@color/second_color</item>
        <item name="colorSecondaryVariant">@color/text_second</item>
        <item name="colorOnSecondary">@color/black</item>
        
        <item name="android:statusBarColor" ns1:targetApi="l">?attr/colorPrimary</item>
        
    </style>
    <style name="Theme.AppBanSach.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="Theme.AppBanSach.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.AppBanSach.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>
</resources>